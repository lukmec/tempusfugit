<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_padding"
        android:layout_marginStart="@dimen/no_padding"
        android:layout_marginEnd="@dimen/no_padding"
        app:cardBackgroundColor="@color/groupEvent_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rVCard_checkbox_event_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/large_padding"
                android:layout_marginEnd="@dimen/large_padding"
                android:layout_marginTop="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_padding"
                android:clickable="false" />

            <TextView
                android:id="@+id/rVCard_eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/normal_padding"
                android:paddingBottom="@dimen/normal_padding"
                android:layout_weight="1"
                android:text="@string/placeholder_lorem_ipsum_20words" />

            <!--<TextView-->
                <!--android:id="@+id/rVCard_eventPriority"-->
                <!--style="@style/card_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginStart="@dimen/large_padding"-->
                <!--android:text="@string/placeholder_number" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/normal_padding"
                android:paddingEnd="@dimen/no_padding">

                <TextView
                    android:id="@+id/rVCard_label_eventToDoDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:text="@string/label_cV_event_tododay"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rVCard_label_eventPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0"
                    android:text="@string/label_cV_event_priority"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding">

                <TextView
                    android:id="@+id/rVCard_eventToDoDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:text="@string/placeholder_totoday"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/rVCard_eventPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0"
                    android:text="@string/placeholder_number"
                    android:textSize="12sp"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

